<!DOCTYPE html>
<html>
  <head>
    <title>Paint</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-10" style="border: 1px solid lightgrey;">
        <%= image_tag 'logo', id: "logo" %>
        <div style="float: right;"> 
          <% if user_signed_in? %>
            <p>
              Welcome <%= current_user.username.titleize %> | 
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
            </p>
          <% else %>
            <% show_button = (params[:controller] == "welcome") ? "" : "display:none;" %>
            <button type="button" data-toggle="modal" data-target="#login_register_form" style="<%= show_button %>" class="login_register_button btn btn-success" >
              Login/Register
            </button>
          <% end %>
        </div>
        <br/>
        <hr style="border: 1.5px solid gray">
        <%= yield %>
      </div>
      <div class="col-md-1">
      </div>
    </div>
  </body>
</html>
